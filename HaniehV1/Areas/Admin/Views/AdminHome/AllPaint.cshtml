@using Data.ViewModels
@model AllPaintsVm


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Admin/AllPaintsNew.css">
    <title>All Paints</title>
</head>


<body>
    <div class="header">
        <div class="left-sec">
            <a class="a-burger" href="#">
                <img src="/icon/hamburger-menu.svg" class="burger-logo">
            </a>
            <img class="hanieh-logo" src="/icon/youtube-logo.svg">
        </div>
        <div class="middle-sec">
            <div class="title-web">HANIEH</div>
        </div>
        <div class="right-sec"></div>
    </div>

    <div class="main-section">
        <div class="main-left"></div>
        <div class="table-staff">
            <table class="myTable">
                <tr>
                    <th>Paint</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Extra</th>
                </tr>
                @foreach( var paint in Model.Paints ){
                    <tr>
                        <td>
                            <img src="/paintImage/@paint.ImagePaintName" class="paint-img">
                        </td>
                        <td>
                            <p class="title-paint">@paint.PaintName</p>
                        </td>
                        <td>
                            <p>@paint.Created</p>
                        </td>
                        <td>
                            <a asp-area="Admin" asp-controller="AdminHome" asp-action="Editpaint" asp-route-id="@paint.PaintId">
                                <button class="edit-btn">Edit</button>
                            </a>
                            <a asp-area="Admin" asp-controller="AdminHome" asp-action="DeletePaint" asp-route-id="@paint.PaintId">
                                <button class="delete-btn">Delete</button>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="main-right"></div>
    </div>
</body>
</html>