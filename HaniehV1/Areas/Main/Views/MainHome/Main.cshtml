@using Data.ViewModels
@model AllPaintForMainVm

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/Home/newHome.css">
    <title>Home | Hanieh</title>
</head>
<body>

    <div class="home-header">
        <div class="left-section">
            <div class="header-logo">
                <img class="logo" src="/img/MU9.png">
            </div>
            <div class="header-title">
                <p class="title">Hanieh|Woman Life Freedom</p>
            </div>
            <div style="
            flex: 1;
            display: flex;
            flex-direction: row;
            height: unset;
            justify-content: center;
            align-items: center;
            "
                class="header-admin">
                <div class="header-admin-btn">
                    @if(User.Identity.Name != null ){
                        <a asp-area="Main" asp-controller="MainHome" asp-action="SignOutAdmin">
                            <button style="
                        padding: 0.3rem 1rem;
                        border: none;
                        border-radius: 0.17rem;
                        background-color: #323232;
                        color: #beada3;
                        font-family: monospace;
                        font-weight: bold;
"
                                class="admin-btn">
                                SignOut
                            </button>
                        </a>
                    }else{
                        <a asp-area="Main" asp-controller="MainHome" asp-action="SignIn">
                            <button style="
                            padding: 0.3rem 1rem;
                            border: none;
                            border-radius: 0.17rem;
                            background-color: #323232;
                            color: #beada3;
                            font-family: monospace;
                            font-weight: bold;
    "
                                class="admin-btn">
                                Login
                            </button>
                        </a>
                    }
                </div>
            </div>
        </div>
        <div class="header-secend">
            <p class="some-text">lorem ipsum dolor sit amet, consectetur adip</p>
        </div>
    </div>


    <div class="home-main">

        @foreach( var paint in Model.Paints)
        {
            <div class="paint-obj">
                <div class="paint-img">
                    <img class="paint" src="/paintImage/@paint.ImagePaintName">
                </div>
                <div class="paint-info">
                    <p class="paint-title">@paint.PaintName</p>
                </div>
                <div class="paint-show">
                    <form asp-area="Main" asp-controller="MainHome" asp-action="ShowPaint" asp-route-id="@paint.PaintId" class="form-input">
                        <button  type="submit" class="show-btn">Show</button>
                    </form>
                </div>
            </div>
        }
    <div class="home-endbar">
        <div class="mehrshad-info">
            <div class="mehrshad-text">
                <p>this webseit is created by <span class="mehrshad">Mehrhsad</span></p>
            </div>
        </div>
    </div>
</body>
</html>